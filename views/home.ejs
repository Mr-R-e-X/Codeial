<link rel="stylesheet" href="/css/home.css" />

<div id="home-container">
  <section id="feed-posts">
    <% if(locals.user) { %>
    <form action="/posts/create" id="new-post-form" method="POST">
      <textarea
        name="content"
        cols="30"
        rows="2"
        placeholder=" What's in your mind ...???"
        required
      ></textarea>
      <input type="submit" value="Post" />
    </form>
    <% } %>
    <div id="posts-list-container">
      <h4><i class="fa-solid fa-signs-post" style="color: blueviolet;"></i>&nbsp;POSTS</h4>
      <p>
        <% for(post of posts){ %> <%- include('_post') -%> <% } %>
      </p>
    </div>
  </section>
  <section id="user-friends">
    <h4><i class="fa-solid fa-user-group" style="color: blueviolet;"></i>&nbsp;Friends</h4>
    <% for(u of all_users){ %>
      <p>
        <i class="fa-solid fa-user" style="color: blueviolet;"></i>
        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
      </p>

    <% } %>
  </section>
</div>
<script src="https://kit.fontawesome.com/bf0cf320c3.js" crossorigin="anonymous"></script>
<script src="/js/home_posts.js"></script>

