<link rel="stylesheet" href="/css/chatbox.css">
<% if(locals.user) { %>
<div id="target-chatbox">
    <a href="#chat-box"><i class="fa-brands fa-facebook-messenger fa-2xl" style="color: #3a8d4a;"></i></a>
</div>
<div id="chat-box">
    <span id="chat-box-header">
        <h5 id="chat-box-title">Messenger</h5>
        <a href="#" id="chat-box-close-sign"> <i class="fa-regular fa-circle-xmark fa-lg"></i> </a>
    </span>
    
    <div id="user-chat-box">

        <div id="chat-messages-list">
            <p class="other-message">
                <span></span>
            </p>
            <p class="self-message">
                <span></span>
            </p>
            <div id="chat-message-input-container">
                <input type="text" id="chat-message-input" placeholder="Type your message here!!" required>
                <button id="send-message"><i class="ri-send-plane-2-fill"></i></button>
            </div>
        </div>
    </div>
</div>
<% } %> 