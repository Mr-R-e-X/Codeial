<link rel="stylesheet" href="/css/comment.css" />
<div id="comment-<%= comment._id %>" class="comments">
  <img src="<%= comment.user.avatar %> " alt="<%= comment.user.name %> "/>
  <p> &nbsp;<%= comment.user.name %> </p>
   <%= comment.content %> <% if (locals.user && locals.user.id == comment.user.id){ %>
  <small>
    <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">Delete Comment</a>
  </small>
  <% } %>
</div>
